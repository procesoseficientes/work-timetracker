<h2>
  <a href="/roles" type="button" class="btn btn-dark btn-sm">
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
    </svg>
  </a>
  {{role.name}} role

  <button onclick="toggleFilter()" type="button" class="btn btn-dark btn-sm">
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
    </svg>
  </button>
</h2>
<form method="PATCH">
  <div class="form-group">
    <label for="role">Name</label>
    <input value="{{role.name}}" autocomplete="new-password" type="text" class="form-control bg-dark text-light" name="role" placeholder="Enter role name">
  </div>

  <div class="form-group">
    <label for="username">Color</label>
    <input value="{{role.color}}" type="color" class="form-control bg-dark text-light" name="color">
  </div>

  <button type="submit" class="btn btn-primary">Update</button>
</form>
<br>
<form method="POST" id="post" class="collapsible-content hiding">
  <div class="form-group">
    <label for="route">Name</label>
    <input autocomplete="new-password" type="text" class="form-control" name="route" placeholder="Enter role name">
  </div>
  
  <div style="display: flex; justify-content: space-around;">
    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" name="create" id="create">
      <label class="custom-control-label" for="create">Create</label>
    </div>
    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" name="read" id="read">
      <label class="custom-control-label" for="read">Read</label>
    </div>
    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" name="update" id="update">
      <label class="custom-control-label" for="update">Update</label>
    </div>
    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" name="delete" id="delete">
      <label class="custom-control-label" for="delete">Delete</label>
    </div>
  </div>
  <br>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>

{{{table}}}

<nav aria-label="Page navigation">
  <ul class="pagination">
    {{#showPrevious}}<li class="page-item"><a class="page-link bg-dark text-light" href="#">Previous</a></li>{{/showPrevious}}
    {{#showNext}}<li class="page-item"><a class="page-link bg-dark text-light" href="#">Next</a></li>{{/showNext}}
  </ul>
</nav>

<script>
  function toggleFilter () {
    document.getElementById('post').classList.toggle('hidden')
  }
  
  function pagination (direction) {
    const newPage = parseInt($('#page').val()) + direction
    $('#page').val(newPage > 0 ? newPage : 0)
    $('#filter').submit()
  }
</script>