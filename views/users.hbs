<h2>Users</h2>
<form method="POST">
  <div class="form-group">
    <label for="name">Full name</label>
    <input type="text" class="form-control bg-dark text-light" name="name" placeholder="Enter name">
  </div>
  
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" class="form-control bg-dark text-light" name="username" placeholder="Enter username">
  </div>

  <div class="form-group">
    <label for="name">Password</label>
    <input type="password" class="form-control bg-dark text-light" name="password" placeholder="Enter password">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Username</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.name}}</th>
      <td>{{this.username}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>