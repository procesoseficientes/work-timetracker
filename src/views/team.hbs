<ul class="nav nav-dark-pills nav-fill">
  <li class="nav-item">
    <a class="nav-link active">Team</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/stats">Projects</a>
  </li>
</ul>
<br>
<h2>
  Team
  <a onclick="toggleLoading()" href="/users" class="btn btn-dark btn-sm">
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
    </svg>
  </a>
</h2>
{{#each team}}
  <hr/>
  <h6>{{this.name}}</h6>
  <label>{{this.task}} - {{this.project}}</label>
  <div class="progress" style="height: 35px;">
    {{#each this.times}}
    <div 
      class="progress-bar {{this.color}} {{#if this.current}}progress-bar-animated progress-bar-striped{{/if}}" 
      role="progressbar" 
      style="width: {{this.percent}}%" 
      aria-valuenow="20" 
      aria-valuemin="0" 
      aria-valuemax="100"
    >
      {{this.owner}} ({{this.hours}}h)
    </div>
    {{/each}}
  </div>
  <br/>
{{/each}}